<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/card_img"/>

    <ImageView
        android:id="@+id/card_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/card_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/card_epithet"
        android:layout_alignBottom="@+id/card_epithet"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/card_img"
        android:textSize="16sp"
        android:text="No.4" />

    <TextView
        android:id="@+id/card_epithet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/card_index"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:text="@string/epithet4" />

    <TextView
        android:id="@+id/card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/card_epithet"
        android:layout_alignBottom="@+id/card_epithet"
        android:layout_toRightOf="@+id/card_epithet"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:text="@string/name4" />

    <TextView
        android:id="@+id/card_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/card_epithet"
        android:layout_alignBottom="@+id/card_epithet"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textSize="16sp"
        android:text="x 99" />

</RelativeLayout>